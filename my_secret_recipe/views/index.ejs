<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recipe App</title>
  <link rel="stylesheet" href="/styles/main.css">
  <script>
    function confirmDelete(event) {
      if (!confirm('Are you sure you want to delete this recipe?')) {
        event.preventDefault(); // Prevents form submission if user cancels
      }
    }
  </script>
</head>
<body>
  <div class="container">
    <h1>Secret Recipes</h1>
    <% if (user) { %>
      <p>Welcome, <%= user.username %>!</p>
      <form action="/logout" method="GET" class="button-left">
        <button type="submit">Logout</button>
      </form>
    <% } %>
    <a href="/recipes/new">Add New Recipe</a>
    <ul>
      <% recipes.forEach(recipe => { %>
        <li>
          <h2><%= recipe.title %></h2>
          <% if (recipe.image) { %>
            <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.title %>" style="max-width: 300px;">
          <% } %>
          <p><strong>Ingredients:</strong> <%= recipe.ingredients %></p>
          <p><strong>Instructions:</strong> <%= recipe.instructions %></p>
          <form action="/recipes/delete/<%= recipe._id %>" method="POST" style="display:inline;">
            <button type="submit" onclick="confirmDelete(event)" class="button">Delete</button>
          </form>
          <a href="/recipes/edit/<%= recipe._id %>" class="button">Edit</a>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
